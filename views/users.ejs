<!DOCTYPE html>
<html>
<head>
  <title>All Users</title>
</head>
<body>
  <h1>All Users</h1>
  <% users.forEach(user => { %>
    <div>
      <p>Name: <%= user.firstName %> <%= user.lastName %></p>
      <form action="/users/<%= user._id %>/friend-requests" method="POST">
        <input type="hidden" name="friendId" value="<%= user._id %>">
        <button type="submit">Add Friend</button>
      </form>
    </div>
  <% }) %>
</body>
</html>
